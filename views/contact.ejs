</head>
<body>
  <!-- canvas section -->
<section>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/three.js/r75/three.min.js'></script>
    <script src="assets/js/stars.js"></script>
</section>
<!-- canvas ends -->


<!-- back button -->
<div class="back_button animated zoomIn delay-1s">
    <a href="home"><img src="assets/img/logo.png" alt=""></a>
</div>


        <!-- navbar -->
        <%- include("partials/nav") %>
    
    <!-- navbar ends -->
    <section>
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="space"></div>
                <div class="col col-12 text-center text-md-left">
                    <h3 class="home_head animated fadeIn delay-1s">CONTACT US</h3>
                </div>
            </div><!-- &&row -->
             <!-- row -->
            <div class="row animated fadeIn delay-1s">
                <div class="col col-12">
                    <div class="space-50"></div>
                    <div class="col col-12 col-md-6 " >
                        <!-- form starts here -->
                        <form  id="mail_form" method="POST" action="/contact" name="mail_form" >
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control" id="name"  required >
                            </div>
                            <div class="form-group">
                              <label for="email">Email address</label>
                              <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" required >
                            </div>
                           
                            
                              
                                <div class="form-group">
                                    <label for="exp">Message</label>
                                    <textarea id="textarea" class="form-control" name="content" rows="3"></textarea>
                                  </div>

                                  <!-- Mail sent message -->
                                <div class="text-danger">
                                        <%= message %>
                                </div> 


                                <div class="text-center">
                                    <a onclick="required()"  class="neon_light">
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                        <span></span><i  class="fab fa-telegram" ></i>
                                    </a>
                                </div>
                            
                        </form>  <!-- form ends --> 
                         
                    </div>
                </div>
            </div><!-- &&row -->
            
        </div><!-- container end -->
        
    </section>
    <!-- =========================================== -->
    <div class="space"></div>
    <section>
        <div class="container">
            <div class="row">
                <div class="col col-12 ">
                  
                    <div class="row">
                        <div class="col col-12">
                            <div class="row">
                                <!-- contact box -->
                                <div  class="col col-12  contact-box animated zoomIn delay-1s">
                                    <!-- card -->
                                    <div class="card text-center">
                                        <div class="card_head"></div>
                                        <div class="card_body">email</div>
                                        <div class="card_body"><a href="mailto:mail@dhishna.org?subject=feedback">mail@dhishna.org</a></div>
                                    </div>
                                     <!-- card end -->

                                     <!-- card -->
                                     
                                    <div class="card text-center">
                                        <div class="card_head">Public Relations</div>
                                        <div class="card_body">Mufnas Muneer</div>
                                        <div class="card_body"><a href="tel:8606797536â€¬">8606797536</a></div>
                                    </div>
                                     <!-- card end -->

                                     
                                    
                                </div>
                           <!-- ------------- -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ========================= -->

    <section>
        <!-- footer social media icons -->
        <div class="space"></div>
        <div class="container">
            <div class="row">
                <div class="col col-12 ">
                     <ul class="social_dhishna ">
                        <li>
                            <a target="_blank" href="https://www.facebook.com/dhishna.cusat/" title=""><i class="fab fa-facebook-f" ></i></a>
                        </li>
                        <li>
                            <a target="_blank" href="https://www.instagram.com/dhishna.cusat/" title=""><i class="fab fa-instagram" ></i></a>
                        </li>
                       
                        <li>
                            <a target="_blank" href="https://www.youtube.com/channel/UCxa_SzyC6Ylv2M19RGVCArg" title=""><i class="fab fa-youtube" ></i></a>
                        </li>
                        
                    </ul>
                </div>
                <div class="space"></div>
            </div>

        </div>
    </section>


    <!-- ========================= -->
    <!-- script -->
    <script src="assets/js/navbar.js"></script>
    <!-- script -->

    <!--  -->
    <script type="text/javascript">
        function required()
        {
            var empt = document.forms["mail_form"]["email"].value;
            var empt1 = document.forms["mail_form"]["content"].value;

            if (empt == "" || empt1 == "")
            {
                alert(':-) Fill all details before sending...');
                return false;
            }
            else 
            {
                
                document.getElementById('mail_form').submit()
                return true; 
            }
        }
    </script>
</body>
</html>